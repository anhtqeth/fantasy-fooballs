<div class="container">
  <h1>Users Management</h1>
  <hr>
  <h4>All User</h4>
  <div class="jumbotron">
    <%= link_to "Add New User", new_user_path,class: "btn btn-success" %>
    <hr>
    <!--User list-->
    <div id="users-list">
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Full Name</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <%@users.each.with_index do |user,index|%>
          <tr>
            <th scope="row"><%=index+=1%></th>
            <td><%=user.first_name%></td>
            <td><%=user.last_name%></td>
            <td><%=user.full_name%></td>
            <td><%= link_to "Edit", edit_user_path(user),class: "btn btn-info" %>
            <%= link_to "Delete", user, method: :delete, data: { confirm: "Delete User #{user.first_name}" },class: "btn btn-danger" %></td>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>